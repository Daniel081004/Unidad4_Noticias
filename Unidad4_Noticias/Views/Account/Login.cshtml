@model Unidad4_Noticias.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - Noticias ITESRC</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <header>
        <div class="header-content">
            <h1 class="site-title">Noticias ITESRC</h1>
        </div>
    </header>

    <main class="main-content">
        <section class="login-container">
            <h2 class="login-title">Iniciar Sesión</h2>
            <p class="login-subtitle">Accede a tu cuenta para continuar</p>

            <form method="post" action="~/Account/Login">
                <div class="form-group">
                    <label for="username" class="form-label">Usuario</label>
                    <div class="input-container">
                        <input asp-for="Username" type="text" id="username" class="form-input" placeholder="Ingresa tu usuario" required>
                        <span class="input-icon">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-container">
                        <input asp-for="Password" type="password" id="password" class="form-input" placeholder="Ingresa tu contraseña" required>
                        <span class="input-icon">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                </div>
                @Html.ValidationSummary()
                <button type="submit" class="submit-button">Ingresar al Sistema</button>
            </form>
        </section>
    </main>

    <footer>
        <p class="footer-text">Sistema de Noticias ITESRC &copy; 2024</p>
    </footer>

</body>
</html>